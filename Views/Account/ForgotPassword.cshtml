            <div class="container">
                <div class="sentence">
                    <form name="signInForm" class="login" ng-controller="demoCtrl" ng-submit="signIn()">
                        <div class="row" style="background-color:#E8E8E8">

                            <h1>Forgot Password</h1>
                            <div class="alert alert-danger" ng-show="person.Error" id="diverror" style="display:none;">
                                <strong>Error!</strong><span ng-bind-html="person.MessageError"></span>
                            </div>
                            @if (ViewBag.Message != null)
                            {
                                <div>
                                    <span>@ViewBag.Message</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Convert.ToString(Session["NotRegister"])))
                            {
                                <div class="alert alert-danger">
                                    <strong></strong><span>@Convert.ToString(Session["NotRegister"])</span>
                                </div>

                            }
                            @{
                                Session.Remove("NotRegister");

                            }
                            <div class="col-md-4 col-md-offset-4  text-center">
                                <div class="form-group">
                                    <label for="exampleInputEmail1" class="sr-only">Email</label>
                                    <input type="text" ng-model="person.Email" class="form-control input text-center btn-block" name="username" id="Email" value="" autofocus />
                                    <!--<input type="Enter Code" class=" form-control input text-center btn-block" placeholder="Enter Code">-->
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-lg btn-block btn-oval" value="Submit" data-ng-click="GetPassword()" />
                                    <!--<button type="submit" class="btn btn-lg btn-block btn-oval">Continue</button>-->
                                </div>
                            </div>
                        </div>
                    </form>


                </div>
                <div class="form-group ">
                    <img src="/Content/assets/images/boxshadow.png">
                </div>
