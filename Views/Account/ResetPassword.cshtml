                                   name="last-name"
                                   size="40" class="form-control input text-center btn-block" placeholder="Confirm Password" id="ConfirmPass" tabindex=2 />
                            <!--<input type="Enter Code" class=" form-control input text-center btn-block" placeholder="Enter Code">-->
                        </div>
                        <div class="form-group">
                            <input type="button" value="Submit"
                                   class="btn btn-lg btn-block btn-oval"
                                   data-ng-click="ResetPassword()" tabindex=27 />
                            <!--<button type="submit" class="btn btn-lg btn-block btn-oval">Continue</button>-->
                        </div>
                    </div>
                </div>



