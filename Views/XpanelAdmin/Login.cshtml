
@{
    ViewBag.PageHead = "Login";
    Layout = null;
}



<link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="/Content/css/styles.css" rel="stylesheet">

<script src="http://code.angularjs.org/1.4.8/angular.js"></script>
<script src="http://code.angularjs.org/1.4.8/angular-resource.js"></script>
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js"></script>
<title>Login</title>


<script src="/Scripts/jquery-1.10.2.js"></script>
<script src="/Scripts/angular.js"></script>
<script src="/Scripts/StaffAngular.js"></script>
<script src="/Scripts/angular-sanitize.js"></script>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
         

            <a class="navbar-brand" href="~/XpanelAdmin/UserList"><span>Bariatric</span> Admin Panel</a>
            
            </div>
    </div>
</nav>


<div ng-app="demoModule" style="margin-top:55px;">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <form name="signInForm">
                    <div class="panel-heading">Sign In</div>
                    <div class="panel-body" ng-controller="demoCtrl" >
                        <div class="alert alert-danger" ng-show="staff.Error" id="diverror" style="display:none;">
                            <strong>Error!&nbsp;</strong><span ng-bind="staff.MessageError"></span>
                        </div>

                        <div class="form-group">
                            <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus id="txtemail" ng-model="staff.EmailId">
                        </div>
                        <div class="form-group">
                            <input id="txtPsw" class="form-control" placeholder="Password" name="password" type="password" ng-model="staff.Password">
                        </div>

                        <input type="submit" class="btn btn-primary" id="btnSubmit" data-ng-click="SignIn()" value="Sign In" />

                    </div>
                    </form>
</div>
        </div><!-- /.col-->


 
</div>


